@model ShopProductServiceModel

<div class="col-lg-4 col-md-6">
    <div class="product__item">
        <div class="product__item__pic set-bg" data-setbg="@Model.ImageUrl">
            <form method="post">
                <ul class="product__hover">
                    <li><a href="@Model.ImageUrl" class="image-popup"><span class="arrow_expand"></span></a></li>
                    @if (this.User.IsAdmin())
                    {
                        <li><a asp-area="Admin" 
                            asp-controller="@(ViewData["Title"].ToString().Contains("Clothes") ? "Clothes" : ViewData["Title"])" 
                            asp-action="Edit" 
                            asp-route-Id="@Model.Id"><span class="icon_pencil-edit"></span></a>
                        </li>
                        <li><a asp-area="Admin" 
                            asp-controller="@(ViewData["Title"].ToString().Contains("Clothes") ? "Clothes" : ViewData["Title"])" 
                            asp-action="Delete" 
                            asp-route-Id="@Model.Id"><span class="icon_minus-06"></span></a>
                        </li>
                    }
                    else
                    {
                        <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                        <li><a class="add-product" data-itemId="@Model.Id"><span class="icon_bag_alt"></span></a></li>
                    }
                </ul>
            </form>
        </div>
        <div class="product__item__text">
            <h6><a asp-area="" 
                asp-controller="@(ViewData["Title"].ToString().Contains("Clothes") ? "Clothes" : ViewData["Title"])" 
                asp-action="Details" 
                asp-route-id="@Model.Id" 
                asp-route-information="@Model.GetInformation()">@Model.Name</a>
            </h6>
            <h6><strong>@Model.Brand</strong></h6>
            <br />
            <div class="product__price">@Model.Price</div>
        </div>
    </div>
</div>
