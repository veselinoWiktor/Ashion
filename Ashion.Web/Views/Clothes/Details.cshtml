@model ClothDetailsServiceModel

@{
    ViewBag.Title = "Cloth Details";
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i>Home</a>
                    @switch (Model.FashionType)
                    {
                        case "Kids":
                            <a asp-area="" asp-controller="Shop" asp-action="Kids">Kid's</a>
                            break;
                        case "Male":
                            <a asp-area="" asp-controller="Shop" asp-action="Mens">Men's</a>
                            break;
                        case "Female":
                            <a asp-area="" asp-controller="Shop" asp-action="Womens">Women's</a>
                            break;
                    }
                    <span>@Model.Name</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__left product__thumb nice-scroll">
                        @{
                            var imageUrls = Model.ImageUrls.ToList();
                        }
                        @for (int i = 0; i < imageUrls.Count; i++)
                        {
                            <a class="pt active" href="#product-@(i)">
                                <img src="@imageUrls[i]" alt="">
                            </a>
                        }
                    </div>
                    <div class="product__details__slider__content">
                        <div class="product__details__pic__slider owl-carousel">
                            @for (int i = 0; i < imageUrls.Count; i++)
                            {
                                <img data-hash="product-@(i)" class="product__big__img" src="@imageUrls[i]" alt="">
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product__details__text">
                    <h3>@Model.Name <span>Brand: @Model.Brand</span></h3>
                    <div class="product__details__price">$ @String.Format("{0:f2}", Model.Price)</div>
                    @if (Model.ShortContent != null)
                    {
                        <p>@Model.ShortContent</p>
                    }
                    <div class="product__details__button">
                        <div class="quantity">
                            <span>Quantity:</span>
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                        <a href="#" class="cart-btn"><span class="icon_bag_alt"></span>Add to cart</a>
                        <ul>
                            <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                        </ul>
                    </div>
                    <div class="product__details__widget">
                        <ul>
                            <li>
                                <span>Availability:</span>
                                <div class="stock__checkbox">
                                    <label for="stockin">
                                        In Stock
                                        <input type="checkbox" id="stockin" @(Model.InStock == true ? "checked" : "") disabled>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <span>Available color:</span>
                                <div class="color__checkbox">
                                    <label for="@Model.MainColor.Name">
                                        <input type="radio" name="color__radio" id="@Model.MainColor.Name" checked>
                                        <span class="checkmark @Model.MainColor.Name.ToLower()"></span>
                                    </label>
                                    @if (Model.OtherColors.Count() > 0)
                                    {
                                        foreach (var color in Model.OtherColors)
                                        {
                                            <label for="@color.Name">
                                                <input type="radio" name="color__radio" id="@color.Name">
                                                <a asp-area="" asp-controller="Clothes" asp-action="Details" asp-route-id="@color.ClothId"><span class="checkmark @color.Name.ToLower()"></span></a>
                                            </label>
                                        }
                                    }
                                </div>
                            </li>
                            <li>
                                <span>Available size:</span>
                                <div class="size__btn">
                                    @foreach (var size in Model.Sizes)
                                    {
                                        <label for="@size.SizeNumber">
                                        <input type="radio" id="@size.SizeNumber">
                                        @size.SizeNumber
                                        </label>
                                    }
                                </div>
                            </li>
                            @*<li>
                                <span>Promotions:</span>
                                <p>Free shipping</p>
                            </li>*@
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">Reviews ( 2 )</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <h6>Description</h6>
                            <p>
                                @Model.Description
                            </p>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <h6>Reviews ( 2 )</h6>
                            <p>
                                Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut loret fugit, sed
                                quia consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt loret.
                                Neque porro lorem quisquam est, qui dolorem ipsum quia dolor si. Nemo enim ipsam
                                voluptatem quia voluptas sit aspernatur aut odit aut loret fugit, sed quia ipsu
                                consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. Nulla
                                consequat massa quis enim.
                            </p>
                            <p>
                                Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget
                                dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes,
                                nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium
                                quis, sem.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
